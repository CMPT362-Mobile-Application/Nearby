<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    tools:context=".fragments.NewCommentFragment">

    <TextView
        android:id="@+id/new_comment_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:text="Add Comment" />

    <EditText
        android:id="@+id/new_comment_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_comment_title"
        app:layout_constraintBottom_toTopOf="@id/new_comment_reply"
        android:inputType="textMultiLine"
        android:background="@android:color/background_light"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/new_comment_reply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_comment_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        android:textColor="@color/teal_700" />

    <Button
        android:id="@+id/new_comment_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/new_comment_reply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_comment_edittext"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/post" />


</androidx.constraintlayout.widget.ConstraintLayout>